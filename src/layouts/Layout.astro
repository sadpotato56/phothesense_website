---
// Import các file CSS toàn cục
import '../styles/base.css';
import '../styles/header.css';
import '../styles/footer.css';
import HeaderHero from '../components/HeaderHero.astro';
import HeaderSubpage from '../components/HeaderSubpage.astro';
import Footer from '../components/Footer.astro';
interface Props {
  title?: string;
  description?: string;
  image?: string;
  headerType?: 'hero' | 'subpage';
}

const { 
  title = "PHOTHESENSE | Local Travel Experiences & Workshops in Vietnam",
  description = "Discover authentic local experiences in Hanoi, Ninh Binh, and Sapa. Join hands-on workshops, city tours, and walking tours.",
  image = "/phothesense_website/picture/PTS_logo/background.jpg",
  
  headerType 
} = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

const isHomePage = currentPath === base || currentPath === base.slice(0, -1) || currentPath === '/';
const autoHeader = isHomePage ? 'hero' : 'subpage';
const finalHeaderType = headerType ? headerType : (isHomePage ? 'hero' : 'subpage');


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/png" sizes="32x32" href="/phothesense_website/picture/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/phothesense_website/picture/favicon/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/phothesense_website/picture/favicon/apple-touch-icon.png">
    <link rel="manifest" href="/phothesense_website/picture/favicon/site.webmanifest">
    <meta name="theme-color" content="#1C4278">

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Roboto:wght@400;500&family=Roboto+Slab:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "TravelAgency",
      "name": "PHOTHESENSE",
      "description": "Local travel experiences and workshops in Vietnam",
      "url": "https://phothesense.github.io"
    }
    </script>
  </head>
  <body data-header={finalHeaderType}>
    {finalHeaderType === 'hero' ? <HeaderHero /> : <HeaderSubpage />}
  

    <slot />


    <button id="scrollToTop" class="scroll-to-top">
      <i class="fa-solid fa-chevron-up"></i>
    </button>

    <Footer />
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script is:inline src="../script/base_script.js"></script>
    
  </body>
</html>

