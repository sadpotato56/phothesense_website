        .planning-header-center h2 {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
        }

        .tools-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 cột */
            gap: 24px;
        }

        .tool-card {
            background-color: var(--color-bg-light);
            padding: 40px 32px;
            display: flex;
            flex-direction: column;
            min-height: 320px; /* Đảm bảo độ cao đồng đều */
            transition: transform 0.3s;
        }

        .tool-card:hover {
            transform: translateY(-5px);
            background-color: #c0dbec;
        }

        .tool-icon {
            width: 32px;
            height: 32px;
            margin-bottom: 24px;
            color: #1a1a1a;
        }

        .tool-title {
            font-size: 1rem;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        .tool-desc {
            font-size: 0.95rem;
            color: #333;
            line-height: 1.6;
            margin-bottom: 30px;
            flex-grow: 1; /* Đẩy footer xuống dưới cùng */
        }

        .tool-footer {
            border-top: 1px solid rgba(0,0,0,0.1);
            padding-top: 20px;
        }

        .link-read-more {
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1.5px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* --- 5. RESPONSIVE MEDIA QUERIES --- */
        
        /* Tablet: Chuyển Attractions thành 2 cột, Tools thành 2 cột */
        @media (max-width: 1024px) {
            .attractions-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .tools-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .intro-block h1, .section-header h2, .planning-header-center h2 {
                font-size: 2rem;
            }
        }

        /* Mobile: Chuyển tất cả về 1 cột */
        @media (max-width: 768px) {
            .attractions-grid {
                grid-template-columns: 1fr;
            }
            .tools-grid {
                grid-template-columns: 1fr;
            }
            .section-header {
                flex-direction: column;
                align-items: flex-start;
            }
            .header-controls {
                width: 100%;
                justify-content: space-between;
            }
        }

        .font-label { font-family: 'Inter', sans-serif; }
        .font-title { font-family: 'Libre Baskerville', serif; }
    </style>

