        /* --- TEst --- */

        /* --- Link bao ngoài cùng (để bỏ gạch chân mặc định) --- */
/* Định dạng từng thẻ Link */
.attraction-card-link {
    /* Desktop: Hiển thị đúng 3.5 thẻ */
    flex: 0 0 calc((100% - (24px * 3)) / 3.5); 
    min-width: calc((100% - (24px * 3)) / 3.5);
    
    scroll-snap-align: start;  /* Hít vào lề khi cuộn */
    text-decoration: none;
    display: block;
}

@media (max-width: 992px) {
    /* Tablet: Hiển thị 2.5 thẻ */
    .attraction-card-link {
        flex: 0 0 calc((100% - (24px * 2)) / 2.5);
        min-width: calc((100% - (24px * 2)) / 2.5);
    }
}

@media (max-width: 576px) {
    .attractions-grid {
        gap: 16px; /* Giảm gap trên mobile */
    }
    
    /* Mobile: Hiển thị 1.3 - 1.5 thẻ để thẻ sau "ló" ra rõ hơn */
    .attraction-card-link {
        flex: 0 0 75%; /* Tương đương khoảng 1.3 thẻ */
        min-width: 75%;
    }
}

/* --- Container của chữ chạy (Slide Up Text) --- */
.slide-up-text {
    position: relative;
    overflow: hidden; /* Che phần chữ nằm ngoài khung */
    display: block;   /* Hoặc inline-block */
    margin-top: auto; /* Đẩy xuống đáy card */
    
    /* Typography cho chữ địa điểm */
    font-size: 13px;
    font-weight: 600;
    color: #666;      /* Màu chữ mặc định */
    text-transform: uppercase;
    letter-spacing: 1px;
    height: 20px;     /* Cố định chiều cao để không bị nhảy layout */
}

/* 1. Xử lý chữ gốc (HO CHI MINH CITY) */
.slide-up-text span {
    display: block;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 2. Tạo chữ ảo từ data-hover-text (READ STORY ->) */
.slide-up-text::after {
    content: attr(data-hover-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    /* Ban đầu đẩy nó xuống dưới để ẩn đi */
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Style cho chữ Read Story */
    color: #1C4278; /* Màu xanh Navy hoặc màu bạn thích */
    font-weight: 700;
}

/* --- KHI HOVER VÀO CARD (QUAN TRỌNG) --- */

/* Đẩy chữ gốc lên trên */
.attraction-card-link:hover .slide-up-text span {
    transform: translateY(-100%);
}

/* Kéo chữ Read Story từ dưới lên */
.attraction-card-link:hover .slide-up-text::after {
    transform: translateY(0);
}

        /* --- END OF TEST --- */

        /* --- 4. PLANNING TOOLS SECTION (Info Cards) --- */
