<script>

function initAttractionsCarousel() {
    const grid = document.querySelector('.attractions-grid') 
    const prevBtn = document.getElementById('prevStory') as HTMLButtonElement
    const nextBtn = document.getElementById('nextStory') as HTMLButtonElement;

    if (!grid || !prevBtn || !nextBtn) return;

    function updateNavButtons() {
        if (!grid || !prevBtn || !nextBtn) return;
        const scrollLeft = grid.scrollLeft;
        const scrollWidth = grid.scrollWidth;
        const clientWidth = grid.clientWidth;

        // Kiểm tra nếu ở sát mép trái (Bắt đầu)
        if (scrollLeft <= 5) { // 5px sai số để mượt hơn
            prevBtn.disabled = true;
            nextBtn.disabled = false;
        } 
        // Kiểm tra nếu ở sát mép phải (Kết thúc)
        else if (Math.ceil(scrollLeft + clientWidth) >= scrollWidth - 5) {
            nextBtn.disabled = true;
            prevBtn.disabled = false;
        } 
        // Ở giữa
        else {
            prevBtn.disabled = false;
            nextBtn.disabled = false;
        }
    }

    function getScrollStep() {
        // Lấy chiều rộng của một thẻ bài viết (bao gồm cả gap)
        if (!grid) return 300;
        const firstCard = grid.querySelector('.attraction-card-link');
        return firstCard ? (firstCard as HTMLElement).offsetWidth + 24 : 300;
    }

    nextBtn.addEventListener('click', () => {
        grid.scrollBy({
            left: getScrollStep(),
            behavior: 'smooth'
        });
    });

    prevBtn.addEventListener('click', () => {
        grid.scrollBy({
            left: -getScrollStep(),
            behavior: 'smooth'
        });
    });
    // --- 3. Lắng nghe sự kiện cuộn để đổi màu nút ---
    grid.addEventListener('scroll', updateNavButtons);

    // Chạy lần đầu tiên để thiết lập trạng thái nút khi vừa load trang
    updateNavButtons();
}
// Gọi hàm khi DOM đã sẵn sàng
document.addEventListener('DOMContentLoaded', initAttractionsCarousel);
</script>

