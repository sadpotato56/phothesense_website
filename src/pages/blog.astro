        /* --- 1. RESET & VARIABLES --- */
        :root {
            --font-main: 'Inter', sans-serif;
            --color-text-main: #1a1a1a;
            --color-text-sub: #555;
            --color-bg-light: #f4f4f4;
            --color-accent-pink: #ffcce6; /* Màu hồng nhạt giống mẫu */
            --color-border: #e0e0e0;
            --spacing-container: 20px;
            --max-width: 1540px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            margin-top: 60px;
            font-family: var(--font-main);
            color: var(--color-text-main);
            line-height: 1.5;
            -webkit-font-smoothing: antialiased;
        }

        img {
            max-width: 100%;
            display: block;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .container {
            max-width: var(--max-width);
            margin: 0 auto;
            padding: 0 var(--spacing-container);
        }

        /* --- 2. HEADER & OVERVIEW SECTION --- */
        .section-overview {
            padding: 60px 0;
        }

        .intro-block {
            margin-bottom: 60px;
            max-width: 800px;
        }

        .intro-block h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 16px;
            letter-spacing: -1px;
        }

        .intro-block p {
            font-size: 1.125rem;
            color: var(--color-text-sub);
            font-weight: 300;
            line-height: 1.6;
        }

        /* Header của phần Attractions */
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .section-header h2 {
            font-size: 2.25rem;
            font-weight: 700;
        }

        .header-controls {
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .link-explore {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-decoration: underline;
            text-underline-offset: 4px;
        }

        .nav-arrows {
            display: flex;
            gap: 8px;
        }

        /* Màu mặc định cho nút (Đen) */
        .nav-btn {
            width: 44px;
            height: 44px;
            background-color: #1f1b1b;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 20px;
            transition: color 0.3s ease, opacity 0.3s ease;
            outline: none;
        }

        .nav-btn:disabled {
            background-color: #eee;
            color: #1f1b1b;
            border: none;
            cursor: pointer;
            pointer-events: none;
        }

        .nav-btn:hover {
            background-color: #555555;
            color: white;
        }

/* --- 3. ATTRACTIONS GRID (Image Cards) --- */
.attractions-grid {
    display: flex;
    gap: 24px;                 /* Khoảng cách giữa các thẻ */
    overflow-x: auto;          /* Cho phép cuộn ngang */
    scroll-snap-type: x mandatory; 
    scroll-behavior: smooth;    /* Cuộn mượt khi bấm nút */
    padding: 20px 2px;         /* Khoảng trống cho bóng đổ (shadow) */
    
    /* Ẩn thanh cuộn */
    scrollbar-width: none;     /* Firefox */
    -ms-overflow-style: none;  /* IE/Edge */
}

.attractions-grid::-webkit-scrollbar {
    display: none;             /* Chrome/Safari */
}

        /* --- Khung thẻ bao ngoài --- */
.attraction-card {
    background: #FFFCEE;
    border-radius: 12px;
    overflow: hidden; /* Để ảnh không bị lòi ra khỏi góc bo */
    
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%; /* Để các thẻ cao bằng nhau */
    display: flex;
    flex-direction: column;
}

/* --- Ảnh --- */
.card-image-wrapper {
    position: relative;
    padding-top: 80%; 
    overflow: hidden;
}

.card-image-wrapper img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.attraction-card:hover .card-image-wrapper img {
    transform: scale(1.05); /* Zoom nhẹ khi hover */
}

/* --- Phần nội dung bên dưới --- */
/* --- Phần nội dung bên dưới --- */
.card-body {
    /* Tăng padding: 20px -> 28px (trên dưới) và 24px (trái phải) */
    padding: 10px 4px; 
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

/* 1. Dòng Meta (Ngày & Giờ) */
.card-meta {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #888;
    font-weight: 600; /* Đậm hơn chút cho dễ đọc */
    text-transform: uppercase;
    letter-spacing: 1px; /* Tăng khoảng cách chữ cho thoáng */
    
    /* Tăng khoảng cách xuống tiêu đề: 10px -> 16px */
    margin-bottom: 16px; 
}

.meta-read-time {
    display: flex;
    align-items: center;
    margin-left: auto; /* Đẩy sang phải */
}
.meta-read-time i {
    margin-right: 6px; /* Cách icon xa chữ hơn chút */
    align-items: center;
}

/* 2. Tiêu đề */
.attraction-title {
    /* Reset margin */
    margin: 0; 
    font-size: 20px; /* Tăng cỡ chữ lên chút: 18px -> 20px */
    font-weight: 700;
    line-height: 1.5; /* Tăng chiều cao dòng cho dễ đọc */
    
    /* Tăng khoảng cách xuống Location: 10px -> 16px */
    margin-bottom: 16px; 
}

/* 3. Địa điểm (Phụ) */
.meta-location {
    font-size: 13px;
    color: #666;
    margin-top: auto;
    
 
    padding-top: 16px; 
}


        .meta-location {
            font-size: 0.7rem;
