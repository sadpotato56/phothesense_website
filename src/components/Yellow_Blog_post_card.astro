---
// src/components/YellowCard.astro
---
<div class="yellow-feature-card">
    <div class="card-content">
        <span class="label">Country</span>
        <h2 class="title">Vietnam</h2>
        <div class="divider"></div>
        <a href="#" class="discover-link">Discover &rarr;</a>
    </div>
</div>

<style>
    .yellow-feature-card {
        background-color: #FBDC47; /* Màu vàng thương hiệu */
        width: 100%;
        height: 100%;
        min-height: 350px; /* Đảm bảo độ cao tối thiểu bằng các thẻ khác */
        padding: 30px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end; /* Nội dung dồn xuống dưới */
        /* Không bo góc để trông sắc cạnh như tạp chí, hoặc bo 12px tùy bạn */
    }

    .label {
        font-family: 'Inter', sans-serif;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        color: #1a1a1a;
        opacity: 0.8;
    }

    .title {
        font-family: 'Impact', 'Inter', sans-serif; /* Font đậm */
        font-size: 3rem;
        text-transform: uppercase;
        line-height: 1;
        margin: 0 0 20px 0;
        color: #1a1a1a;
    }

    .divider {
        width: 100%;
        height: 1px;
        background-color: #1a1a1a;
        margin-bottom: 20px;
    }

    .discover-link {
        font-family: 'Inter', sans-serif;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        color: #1a1a1a;
        transition: opacity 0.3s;
    }

    .discover-link:hover {
        opacity: 0.7;
    }
</style>